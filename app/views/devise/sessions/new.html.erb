<div class="w3-row-padding">
  <div class="w3-half">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { class: "w3-container w3-card-4 w3-white" }) do |f| %>
      <h2>Log in</h2>
      <div class="field">
        <%= f.email_field :email, autofocus: true, class: "w3-input" %>
        <%= f.label :email, class: "w3-label w3-validate" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", class: "w3-input" %>
        <%= f.label :password, class: "w3-label w3-validate" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me, class: "w3-check"%>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: "w3-btn w3-right" %><br />
      </div>
      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div><br>
