<div class="w3-row-padding">
  <div class="w3-half">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "w3-container w3-card-4 w3-white" }) do |f| %>
      <h2>Edit <%= resource_name.to_s.humanize %></h2>
      <%= devise_error_messages! %>

      <div class="w3-group">
        <%= f.email_field :email, autofocus: true, class: "w3-input" %>
        <%= f.label :email, class: "w3-label w3-validate" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="w3-group">
        <%= f.password_field :password, autocomplete: "off", class: "w3-input" %>
        <%= f.label :password, class: "w3-label w3-validate"  %> <i>(leave blank if you don't want to change it)</i>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="w3-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "w3-input" %>
        <%= f.label :password_confirmation, class: "w3-label w3-validate"  %>
      </div>

      <div class="w3-group">
        <%= f.password_field :current_password, autocomplete: "off", class: "w3-input" %>
        <%= f.label :current_password, class: "w3-label w3-validate"  %> <i>(we need your current password to confirm your changes)</i>
      </div>

      <div class="actions">
        <%= link_to "Back", :back, class: "w3-btn" %>
        <%= f.submit "Update", class: "w3-btn w3-right"  %>
      </div><br />
    <% end %>

    <p>Unhappy? Cancel Account<%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "w3-btn"  %></p>

  </div>
</div>
